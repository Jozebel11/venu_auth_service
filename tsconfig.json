{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}